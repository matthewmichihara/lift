<?xml version="1.0" encoding="utf-8"?>

<com.pixeltreelabs.lift.android.ui.SquaredLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:orientation="vertical"
                                                       android:layout_width="match_parent"
                                                       android:layout_margin="@dimen/btn_exercise_list_padding"
                                                       android:background="@drawable/grey_selector"
                                                       android:layout_height="match_parent"
                                                       android:gravity="center">

    <TextView
            android:id="@+id/name"
            android:textColor="@color/text"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/weight"
            android:textColor="@color/text"
            android:textSize="42dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="sans-serif-thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/reps"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</com.pixeltreelabs.lift.android.ui.SquaredLinearLayout>